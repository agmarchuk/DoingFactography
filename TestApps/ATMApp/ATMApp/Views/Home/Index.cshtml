@model ATMApp.Models.ATM
@{
    ViewData["Title"] = "ATM_Main";
}


<table border="1">
    <tbody>
        @using (Html.BeginForm("Giveout", "Home", FormMethod.Post))
        {
            <tr>
                <th colspan="3">Всего @Model.bills.Keys.Select(a => a * Model.bills[a]).Sum()</th>
                <th colspan="4">Количество купюр @Model.bills.Values.Select(a => a).Sum()</th>
            </tr>
            <tr>
                <th>10Р:@Model.bills[10]</th>
                <th>50Р:@Model.bills[50]</th>
                <th>100Р:@Model.bills[100]</th>
                <th>200Р:@Model.bills[200]</th>
                <th>500Р:@Model.bills[500]</th>
                <th>1000Р:@Model.bills[1000]</th>
                <th>5000Р:@Model.bills[5000]</th>
            </tr>
            <tr>
                <th colspan="2">
                    <p><input type=text name="GiveOutSum" placeholder="Введите сумму"></p>
                </th>
                <th colspan="2">
                    <p><input type=text name="NominalGiv" placeholder="Введите номинал"></p>
                </th>
                <th colspan="3"><input type="submit" value="Снять деньги" /></th>
            </tr>
        }
        @using (Html.BeginForm("Receive", "Home", FormMethod.Post))
        {
            <tr>
                <th colspan="2">
                    <p><input type=text name="ReceiveSum" placeholder="Введите сумму"></p>
                </th>
                <th colspan="2">
                    <p><input type=text name="NominalRec" placeholder="Введите номинал"></p>
                </th>
                <th colspan="3"><input type="submit" value="Внести деньги" /></th>
            </tr>
        }
    </tbody>
</table>

