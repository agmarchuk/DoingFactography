@using RDFEngine
@model RDFEngine.RRecord
@{
    ViewData["Title"] = "Person";
}

<h1>Person</h1>
<div>Id @Model.Id</div>
<div>Tp @Model.Tp</div>
@if (Model.Tp == "photo")
{
    var rurl  = ((RField)Model.Props.Where(a => a.Prop == "url").FirstOrDefault());
    string url = "~/img/" + rurl.Value;
        <img src="@url" />
    }

@foreach (RProperty rr in Model.Props)
{
    if (rr is RField)
    {
        string value = ((RField)rr).Value;
        <div>name @value</div>
    }

    else if (rr is RLink)
    {
        string value = ((RLink)rr).Resource;
        <div><a href="@value">Reflected</a></div>
    }
    else if (rr is RInverse)
    {
        string value = ((RInverse)rr).Source;
        <div><a href="@value">Indoc</a></div>
    }
}



